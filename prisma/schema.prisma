generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// MODELOS PRINCIPAIS
// ========================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("EMPLOYEE")
  companyId String?
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relacionamentos
  company   Company? @relation(fields: [companyId], references: [id])
  employees Employee[]
  vacations Vacation[]
  warnings  Warning[]
  suspensions Suspension[]
  dismissals Dismissal[]
  contracts Contract[]
  entries  Entry[]

  @@map("users")
}

model Company {
  id               String       @id @default(cuid())
  name             String
  cnpj             String       @unique
  email            String
  phone            String?
  address          String?
  city             String?
  state            String?
  zipCode          String?
  employeeLimit    Int          @default(10)
  currentEmployees Int          @default(0)
  isActive         Boolean      @default(true)
  plan             String       @default("BASIC") // BASIC, INTERMEDIATE, ENTERPRISE
  billingCycle     String       @default("MONTHLY") // MONTHLY, YEARLY
  nextBillingDate  DateTime?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  
  // Relacionamentos
  users            User[]
  employees        Employee[]
  contracts        Contract[]
  dismissals       Dismissal[]
  entries          Entry[]
  suspensions      Suspension[]
  vacations        Vacation[]
  warnings         Warning[]
  billing          Billing[]

  @@map("companies")
}

model Employee {
  id          String       @id @default(cuid())
  name        String
  cpf         String       @unique
  email       String?
  phone       String?
  position    String
  department  String?
  salary      Float?
  hireDate    DateTime
  birthDate   DateTime?
  address     String?
  city        String?
  state       String?
  zipCode     String?
  isActive    Boolean      @default(true)
  companyId   String
  userId      String?      // Usuário que cadastrou
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  // Relacionamentos
  company     Company      @relation(fields: [companyId], references: [id])
  user        User?        @relation(fields: [userId], references: [id])
  contracts   Contract[]
  dismissals  Dismissal[]
  entries     Entry[]
  suspensions Suspension[]
  vacations   Vacation[]
  warnings    Warning[]

  @@map("employees")
}

// ========================================
// MODELOS DE GESTÃO
// ========================================

model Vacation {
  id         String   @id @default(cuid())
  employeeId String
  companyId  String
  userId     String   // Usuário que aprovou
  startDate  DateTime
  endDate    DateTime
  days       Int
  status     String   @default("PENDING") // PENDING, APPROVED, REJECTED
  reason     String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // Relacionamentos
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@map("vacations")
}

model Warning {
  id         String   @id @default(cuid())
  employeeId String
  companyId  String
  userId     String   // Usuário que aplicou
  type       String   // VERBAL, WRITTEN, FINAL
  reason     String
  date       DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // Relacionamentos
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@map("warnings")
}

model Suspension {
  id         String   @id @default(cuid())
  employeeId String
  companyId  String
  userId     String   // Usuário que aplicou
  reason     String
  startDate  DateTime
  endDate    DateTime
  days       Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // Relacionamentos
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@map("suspensions")
}

model Dismissal {
  id         String   @id @default(cuid())
  employeeId String
  companyId  String
  userId     String   // Usuário que processou
  reason     String
  date       DateTime
  type       String   // VOLUNTARY, INVOLUNTARY, MUTUAL
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // Relacionamentos
  company    Company  @relation(fields: [companyId], references: [id])
  employee   Employee @relation(fields: [employeeId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@map("dismissals")
}

model Contract {
  id         String    @id @default(cuid())
  employeeId String
  companyId  String
  userId     String    // Usuário que criou
  type       String    // CLT, PJ, ESTAGIO, TEMPORARIO
  startDate  DateTime
  endDate    DateTime?
  salary     Float?
  position   String
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  
  // Relacionamentos
  company    Company   @relation(fields: [companyId], references: [id])
  employee   Employee  @relation(fields: [employeeId], references: [id])
  user       User      @relation(fields: [userId], references: [id])

  @@map("contracts")
}

model Entry {
  id          String   @id @default(cuid())
  employeeId  String
  companyId   String
  userId      String   // Usuário que lançou
  type        String   // SALARY, BONUS, OVERTIME, DEDUCTION
  amount      Float
  description String?
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relacionamentos
  company     Company  @relation(fields: [companyId], references: [id])
  employee    Employee @relation(fields: [employeeId], references: [id])
  user        User     @relation(fields: [userId], references: [id])

  @@map("entries")
}

// ========================================
// MODELOS DE BILLING E ADMIN
// ========================================

model Billing {
  id          String   @id @default(cuid())
  companyId   String
  amount      Float
  employees   Int
  plan        String
  status      String   @default("PENDING") // PENDING, PAID, OVERDUE, CANCELLED
  dueDate     DateTime
  paidDate    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relacionamentos
  company     Company  @relation(fields: [companyId], references: [id])

  @@map("billing")
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      String   @default("ADMIN") // ADMIN, SUPER_ADMIN
  isActive  Boolean  @default(true)
  lastLogin DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin_users")
}

// ========================================
// MODELOS DE AUDITORIA
// ========================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  companyId String?
  action    String   // CREATE, UPDATE, DELETE, LOGIN, LOGOUT
  table     String   // users, employees, companies, etc.
  recordId  String?
  oldData   Json?
  newData   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@map("audit_logs")
}

// ========================================
// MODELOS DE NOTIFICAÇÕES
// ========================================

model Notification {
  id        String   @id @default(cuid())
  userId    String?
  companyId String?
  type      String   // LIMIT_REACHED, BILLING_DUE, VACATION_APPROVED, etc.
  title     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("notifications")
}